{
  "hosting": {
    "public": "apps/web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "npm --prefix apps/web run build"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "agent-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/mock",
        "destination": "/mock/index.html"
      },
      {
        "source": "/mock/**",
        "destination": "/mock/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
